// Auth Service Jenkins Pipeline - Separate Repository Version
// This Jenkinsfile is designed for a standalone microservice repository

pipeline {
    agent any

    environment {
        // Service configuration
        SERVICE_NAME = 'auth'
        DOCKER_IMAGE = "eadgequry/${SERVICE_NAME}"
        DOCKER_TAG = "${BUILD_NUMBER}"

        // Service-specific configuration
        SERVICE_PORT = '8081'
        DB_HOST = 'mysql'
        DB_PORT = '3306'
        DB_NAME = 'eadgequry-auth'

        // Maven settings
        MAVEN_OPTS = '-Dmaven.test.failure.ignore=false'

        // SonarQube settings (optional - configure in Jenkins)
        SONAR_HOST_URL = 'http://localhost:9000'
        SONAR_PROJECT_KEY = "eadgequry-${SERVICE_NAME}"
    }

    parameters {
        choice(name: 'BUILD_TYPE', choices: ['build', 'test', 'deploy', 'full'], description: 'Select build type')
        booleanParam(name: 'RUN_SONAR', defaultValue: false, description: 'Run SonarQube analysis')
        booleanParam(name: 'RUN_TESTS', defaultValue: true, description: 'Run unit tests')
        booleanParam(name: 'BUILD_DOCKER', defaultValue: true, description: 'Build Docker image')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "ğŸ” Checked out ${SERVICE_NAME} service"
            }
        }

        stage('Environment Info') {
            steps {
                script {
                    echo """
                    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
                    â•‘   ${SERVICE_NAME.toUpperCase()} Service Pipeline
                    â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£
                    â•‘ Build: #${BUILD_NUMBER}
                    â•‘ Branch: ${env.GIT_BRANCH ?: 'N/A'}
                    â•‘ Type: ${params.BUILD_TYPE}
                    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                    """

                    sh '''
                        echo "â˜• Java Version:"
                        java -version
                        echo "ğŸ“¦ Maven Version:"
                        mvn --version
                        echo "ğŸ³ Docker Version:"
                        docker --version
                    '''
                }
            }
        }

        stage('Run Tests') {
            when {
                expression { params.RUN_TESTS && params.BUILD_TYPE in ['test', 'full'] }
            }
            steps {
                script {
                    echo "ğŸ§ª Running tests for ${SERVICE_NAME}..."
                    sh 'mvn clean test'
                }
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Build Application') {
            when {
                expression { params.BUILD_TYPE in ['build', 'deploy', 'full'] }
            }
            steps {
                script {
                    echo "ğŸ—ï¸ Building ${SERVICE_NAME}..."
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            when {
                expression { params.RUN_SONAR && params.BUILD_TYPE in ['build', 'full'] }
            }
            steps {
                script {
                    echo "ğŸ“Š Running SonarQube analysis..."
                    sh """
                        mvn sonar:sonar \
                            -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                            -Dsonar.projectName=${SERVICE_NAME} \
                            -Dsonar.host.url=${SONAR_HOST_URL}
                    """
                }
            }
        }

        stage('Build Docker Image') {
            when {
                expression { params.BUILD_DOCKER && params.BUILD_TYPE in ['deploy', 'full'] }
            }
            steps {
                script {
                    echo "ğŸ³ Building Docker image for ${SERVICE_NAME}..."
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                    """
                    echo "âœ… Docker image built: ${DOCKER_IMAGE}:${DOCKER_TAG}"
                }
            }
        }

        stage('Push Docker Image') {
            when {
                expression {
                    params.BUILD_DOCKER &&
                    params.BUILD_TYPE in ['deploy', 'full'] &&
                    env.DOCKER_REGISTRY_CREDENTIALS != null
                }
            }
            steps {
                script {
                    echo "ğŸ“¤ Pushing Docker image to registry..."
                    // Uncomment when you have a registry configured
                    // docker.withRegistry('https://your-registry', 'docker-credentials') {
                    //     sh "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    //     sh "docker push ${DOCKER_IMAGE}:latest"
                    // }
                }
            }
        }
    }

    post {
        always {
            echo """
            â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
            â•‘   Pipeline Completed
            â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£
            â•‘ Service: ${SERVICE_NAME}
            â•‘ Status: ${currentBuild.result ?: 'SUCCESS'}
            â•‘ Duration: ${currentBuild.durationString}
            â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
            """
        }
        success {
            echo "âœ… ${SERVICE_NAME} pipeline succeeded!"
        }
        failure {
            echo "âŒ ${SERVICE_NAME} pipeline failed!"
        }
        unstable {
            echo "âš ï¸ ${SERVICE_NAME} pipeline is unstable!"
        }
    }
}
