@Library('eadgequry-shared') _

// Service-specific configuration
def SERVICE_NAME = 'auth'
def SERVICE_PATH = 'auth'

pipeline {
    agent any

    environment {
        SERVICE_NAME = "${SERVICE_NAME}"
        SERVICE_PATH = "${SERVICE_PATH}"
        DOCKER_IMAGE = "eadgequry/${SERVICE_NAME}"
        DOCKER_TAG = "${BUILD_NUMBER}"

        // Service-specific ports
        SERVICE_PORT = '8081'

        // Database configuration
        DB_HOST = 'mysql'
        DB_PORT = '3306'
        DB_NAME = 'eadgequry-auth'
    }

    parameters {
        choice(name: 'BUILD_TYPE', choices: ['build', 'test', 'deploy', 'full'], description: 'Select build type')
        booleanParam(name: 'RUN_SONAR', defaultValue: true, description: 'Run SonarQube analysis')
        booleanParam(name: 'RUN_TESTS', defaultValue: true, description: 'Run unit tests')
        booleanParam(name: 'DEPLOY_TO_COMPOSE', defaultValue: false, description: 'Deploy to Docker Compose')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "üîç Checked out ${SERVICE_NAME} service"
            }
        }

        stage('Build & Test') {
            steps {
                dir("${SERVICE_PATH}") {
                    script {
                        echo "üèóÔ∏è Building ${SERVICE_NAME}..."

                        if (params.RUN_TESTS) {
                            sh 'mvn clean test'
                        }

                        sh 'mvn clean package -DskipTests'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            when {
                expression { params.RUN_SONAR }
            }
            steps {
                dir("${SERVICE_PATH}") {
                    sh """
                        mvn sonar:sonar \
                            -Dsonar.projectKey=eadgequry-${SERVICE_NAME} \
                            -Dsonar.projectName=${SERVICE_NAME} \
                            -Dsonar.host.url=http://sonarqube:9000 \
                            -Dsonar.login=admin \
                            -Dsonar.password=admin
                    """
                }
            }
        }

        stage('Build Docker Image') {
            when {
                expression { params.BUILD_TYPE in ['deploy', 'full'] }
            }
            steps {
                dir("${SERVICE_PATH}") {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }

        stage('Deploy') {
            when {
                expression { params.DEPLOY_TO_COMPOSE }
            }
            steps {
                sh """
                    docker-compose stop ${SERVICE_NAME} || true
                    docker-compose rm -f ${SERVICE_NAME} || true
                    docker-compose up -d ${SERVICE_NAME}
                    echo '‚úÖ ${SERVICE_NAME} deployed on port ${SERVICE_PORT}'
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline for ${SERVICE_NAME} completed with status: ${currentBuild.result ?: 'SUCCESS'}"
        }
        success {
            echo "‚úÖ ${SERVICE_NAME} pipeline succeeded!"
        }
        failure {
            echo "‚ùå ${SERVICE_NAME} pipeline failed!"
        }
    }
}
