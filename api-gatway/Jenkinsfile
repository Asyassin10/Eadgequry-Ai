// API Gateway Jenkins Pipeline - Separate Repository Version

pipeline {
    agent any

    environment {
        SERVICE_NAME = 'api-gatway'
        DOCKER_IMAGE = "eadgequry/api-gatway"
        DOCKER_TAG = "${BUILD_NUMBER}"
        SERVICE_PORT = '8765'
        MAVEN_OPTS = '-Dmaven.test.failure.ignore=false'
        SONAR_HOST_URL = 'http://localhost:9000'
        SONAR_PROJECT_KEY = "eadgequry-api-gatway"
    }

    parameters {
        choice(name: 'BUILD_TYPE', choices: ['build', 'test', 'deploy', 'full'], description: 'Select build type')
        booleanParam(name: 'RUN_SONAR', defaultValue: false, description: 'Run SonarQube analysis')
        booleanParam(name: 'RUN_TESTS', defaultValue: true, description: 'Run unit tests')
        booleanParam(name: 'BUILD_DOCKER', defaultValue: true, description: 'Build Docker image')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "üîç Checked out ${SERVICE_NAME} service"
            }
        }

        stage('Run Tests') {
            when {
                expression { params.RUN_TESTS && params.BUILD_TYPE in ['test', 'full'] }
            }
            steps {
                script {
                    echo "üß™ Running tests for ${SERVICE_NAME}..."
                    sh 'mvn clean test'
                }
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Build Application') {
            when {
                expression { params.BUILD_TYPE in ['build', 'deploy', 'full'] }
            }
            steps {
                script {
                    echo "üèóÔ∏è Building ${SERVICE_NAME}..."
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            when {
                expression { params.RUN_SONAR && params.BUILD_TYPE in ['build', 'full'] }
            }
            steps {
                script {
                    echo "üìä Running SonarQube analysis..."
                    sh """
                        mvn sonar:sonar \
                            -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                            -Dsonar.projectName=${SERVICE_NAME} \
                            -Dsonar.host.url=${SONAR_HOST_URL}
                    """
                }
            }
        }

        stage('Build Docker Image') {
            when {
                expression { params.BUILD_DOCKER && params.BUILD_TYPE in ['deploy', 'full'] }
            }
            steps {
                script {
                    echo "üê≥ Building Docker image for ${SERVICE_NAME}..."
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                    """
                    echo "‚úÖ Docker image built: ${DOCKER_IMAGE}:${DOCKER_TAG}"
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline for ${SERVICE_NAME} completed"
        }
    }
}
